<div>
    <h1 class="d-flex justify-content-center p-5"> New Game </h1>
        <div class="d-flex justify-content-center p-3">
            <% @letters.each do |letter| %>
            <p class="card p-3 m-3 shadow rounded justify-content-center align-items-center custom-letter"> <%= letter %> </p>
            <% end %>
        </div>
        <div class="d-flex justify-content-center p-3">
            <form action="/score" method="post" data-turbo="false">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <%= hidden_field_tag :letters, @letters %>
                <p> What is the longest word you can find? </p>
                <input type="texte" name="word" placeholder="Your guess">
                <input type="submit">
            </form>
        </div>
</div>